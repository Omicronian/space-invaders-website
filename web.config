<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Serve index.html for subfolders (fixes EISDIR) -->
        <rule name="Subfolder Index" stopProcessing="true">
          <match url="^falcon9/?$" />
          <action type="Rewrite" url="falcon9/index.html" />
        </rule>
        <!-- Static files (GLTF, PNG, etc.) pass through -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^(.*\.(gltf|bin|png|jpg|css|js))$" />
          <action type="None" />
        </rule>
      </rules>
    </rewrite>
    <!-- MIME types for GLTF files -->
    <staticContent>
      <mimeMap fileExtension=".gltf" mimeType="model/gltf+json" />
      <mimeMap fileExtension=".bin" mimeType="application/octet-stream" />
    </staticContent>
  </system.webServer>
</configuration>
